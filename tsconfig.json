{
   "compilerOptions": {
      "target": "es2022",
      "module": "commonjs",
      "moduleResolution": "Node",
      "outDir": "./build",
     "pretty": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
     "esModuleInterop": true,
     "noImplicitAny": true,
     "allowSyntheticDefaultImports": true
   },
  "include": [
    "src/**/*", "decs.d.ts"
  ],
  "ts-node": {
    "esm": true,
    "files": true
  },
  "exclude": [
    "node_modules"
  ]
}
